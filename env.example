# PyLogs Environment Configuration Example
# Copy this file to .env and modify as needed

# Logging Configuration
PYLOGS_LOG_LEVEL=INFO                # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
PYLOGS_LOG_DIR=./logs               # Directory to store log files
PYLOGS_LOG_FORMAT="%(asctime)s - %(levelname)s - %(name)s - %(message)s"
PYLOGS_CONSOLE_ENABLED=true         # Enable console logging
PYLOGS_FILE_ENABLED=true            # Enable file logging
PYLOGS_JSON_FORMAT=false            # Use JSON format for logs

# Database Configuration
PYLOGS_DB_ENABLED=true              # Enable database logging
PYLOGS_DB_PATH=./db/pylogs.db       # Path to SQLite database
PYLOGS_DB_TABLE=log_records         # Table name for log records

# API Server Configuration
PYLOGS_API_HOST=127.0.0.1           # API server host
PYLOGS_API_PORT=5000                # API server port
PYLOGS_API_DEBUG=false              # Enable debug mode for API server
PYLOGS_API_SECRET_KEY=change_this_to_a_secure_secret_key  # Secret key for API server

# Web Interface Configuration
PYLOGS_WEB_HOST=127.0.0.1           # Web interface host
PYLOGS_WEB_PORT=5001                # Web interface port
PYLOGS_WEB_DEBUG=false              # Enable debug mode for web interface
PYLOGS_WEB_SECRET_KEY=change_this_to_a_secure_secret_key  # Secret key for web interface

# CLI Configuration
PYLOGS_CLI_COLORS=true              # Enable colored output in CLI
PYLOGS_CLI_VERBOSE=false            # Enable verbose output in CLI

# Advanced Configuration
PYLOGS_STRUCTURED_LOGGING=false     # Use structured logging with structlog
PYLOGS_MAX_LOG_SIZE=10485760        # Maximum log file size in bytes (10 MB)
PYLOGS_BACKUP_COUNT=5               # Number of backup log files to keep
